
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sent Requests</title>
    <link rel="stylesheet" href="./stylesheets/Sentrequests.css">
    
</head>
<body>

    <!-- Displaying Sent Requests -->
    <h1>Sent Requests</h1>

        <% contents.Sender.forEach(function(content) { %>
            <div class="request-card">
                <p><strong>Title:</strong> <%= content.title %></p>
                <p><strong>Description:</strong> <%= content.description %></p>
                <p><strong>Opponent Name:</strong> <%= content.OpponentName.username %></p>

                <% if (content.status) { %>
                    <p class="status <%= content.status.toLowerCase() %>"><strong>Status:</strong> <%= content.status %></p>
                <% } %>
        

        <!-- Delete Request Button -->
        <div class="delete-form">
            <form action="/creator/delete/<%= content.opponentId %>" method="post">
                <input type="hidden" name="requestId" value="<%= content.opponentId %>">
                <button type="submit" class="delete-btn">Delete</button>
            </form>
        </div>
    </div>
    <% }) %>
</body>
</html>
