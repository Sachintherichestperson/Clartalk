<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ClarTalk</title>
    <link rel="stylesheet" href="./stylesheets/community.css">
</head>
<body>
    <section class="contanier">
        <div class="home">
            <nav>
                <div class="image">
                <img src="/images/nav.png" alt="clartalk">
                <div class="search"><input type="text" name="" id="" placeholder="Search"></div>
                </div>
                <div class="nav">
                <a href="/" class="Live">Live</a>
                <a href="/debate" class="Debates">Debates</a>
                <a href="/podcast" class="Podcasts">Podcasts</a>
                <a href="/community" class="Community">Community</a>
            </div>
            </nav>
            <div class="page">
                <% communities.forEach(function(community){ %>
                <section class="group">
                    <div class="chat">
                        <strong><%= community.CommunityName %></strong>
                        <div class="msg"><span>About</span>
                            <p><%= community.CommunityisAbout %></p>
                        </div>
                        <a href="/community-chat/<%= community._id %>"><div class="button">chat</div></a>
                    </div>
                </section>
                <% }) %>
                <div class="instruction">
                    No More Community
                </div>
            </div>
        </div>
    </section>
</body>
</html>
